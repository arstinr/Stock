<div class="admin-container">
  <div class="admin-header">
    <h1 class="admin-title">Traders Management</h1>
    <%= link_to "New Trader", new_admin_trader_path, class: "primary-button" %>
  </div>

  <div class="admin-tabs">
    <%= link_to "All Traders", admin_traders_path, class: "tab active" %>
    <%= link_to "Pending Approvals", pending_admin_traders_path, class: "tab" %>
  </div>

  <div class="traders-grid">
    <% @traders.each do |trader| %>
      <div class="trader-card">
        <div class="trader-info">
          <h3><%= trader.name || trader.email %></h3>
          <span class="status-badge <%= trader.is_approved? ? 'approved' : 'pending' %>">
            <%= trader.is_approved? ? 'Approved' : 'Pending' %>
          </span>
        </div>
        <div class="trader-actions">
          <%= link_to "View", admin_trader_path(trader), class: "action-link" %>
          <%= link_to "Edit", edit_admin_trader_path(trader), class: "action-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

