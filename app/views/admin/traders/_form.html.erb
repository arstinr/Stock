<%= form_with model: @trader, url: @trader.persisted? ? admin_trader_path(@trader) : admin_traders_path, class: "form-container" do |form| %>
    <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-textarea" %>
    </div>

    <div class="form-group">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-input" %>
    </div>

    <div class="form-group">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, class: "form-input" %>
    </div>

    <div class="form-group">
        <%= form.label :is_approved, class: "form-label" %>
        <%= form.check_box :is_approved, class: "form-input" %>
    </div>


    <div class="form-group">
        <%= form.submit @trader.persisted? ? "Update Trader" : "Create Trader", class: "form-submit" %>
    </div>
<% end %>