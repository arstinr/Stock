<div class="page-container">
  <h1 class="page-title">My Portfolio</h1>

  <% if @stocks.any? %>
    <div class="stocks-grid">
      <% @stocks.each do |stock| %>
        <div class="stock-card">
          <div class="stock-card-header">
            <h2 class="stock-symbol"><%= stock.symbol %></h2>
            <span class="stock-quantity"><%= pluralize(stock.quantity, 'share') %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No stocks in your portfolio yet</p>
      <%= link_to "Start Trading", search_trader_stocks_path, class: "primary-button" %>
    </div>
  <% end %>
</div>